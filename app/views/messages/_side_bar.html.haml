.side-bar
  .side-bar__user-name
    .tip-items
      %h3.tip-items__name
        = current_user.name
      .tip-items__icons
        = link_to new_group_path do
          = icon('far','edit')
        = link_to edit_user_path(current_user) do
          = icon('fas','cog')
  .side-bar__group-list
    -current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group),class: "group--link" do
          .group--link--name
            = group.name
          .group--link--text
            = group.show_last_message