.chat-main
  .main-header
    .main-header--left-box
      %h2.main-header--left-box-group-name
        = @group.name
      %p.main-header--left-box-group-menber
        Menber:
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .main-header--right-box
      = link_to "Edit", edit_group_path(@group.id), class: "main-header--right-box--edit-btn"
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    .form
      = form_for [@group,@message] do |f|
        .form-box
          = f.text_field :content,class: "form-box--text", placeholder: "type a message"
          = f.label :image, class: "form-box--label" do
            = icon('fas', 'image')
            = f.file_field :image, class: "form-box--image-submit"
          = f.submit "Send", class: "form-box--submit"